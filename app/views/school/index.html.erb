<h1>Schools</h1>
<% @schools.each do |school| %>
  <% courses = Course.where("school = ?",school.id) %>
<div class="row">
  <div class="col-md-1">
    <h3><%= link_to school.name,"/school/#{school.name}" %></h3>
  </div>
  <div class="col-md-7" style="margin-top: 12px">
    <h4><%= school.title %></h4>
  </div>
</div>
<% end %>
