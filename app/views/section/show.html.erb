<h5><%= link_to "Back to sections", "/school/#{@school.name}/#{@course.name}" %></h5>
<div class="row">
  <div class="col-md-3">
    <h1><%= link_to "#{@course.college} #{@course.name}", "/school/#{@school.name}/#{@course.name}"%></h1>
  </div>
  <div class="col-md-4" style="margin-top: 15px;"><p>
    <strong><%= @course.title %></strong><br>
    <span class="text-success"><%= @course.credits %> Credit hours</span>
  </p>
  </div>
</div>

<div class="well">
  <h3>Section <%= @section.name %></h3>
  <% @meetings.each do |meeting| %>
    <% @meeting = meeting %>
    <%= render partial: "meeting/show", object: @meeting %>
  <% end %>
</div>
